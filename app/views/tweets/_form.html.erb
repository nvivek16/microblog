<%= form_for [@user, @tweet], :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :tweetContent, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :tweetContent, :class => 'text_area' %>
    </div>
  </div>


  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                user_tweets_path, :class => 'btn' %>
  </div>
<% end %>
