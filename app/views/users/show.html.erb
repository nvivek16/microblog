<%- model_class = User -%>
<div class="page-header">
<div class="pull-right">
  <h1><%= @user.name %></h1>
  <i><h5><%= @user.bio %></h5></i>
 </div>

 <%= image_tag @user.photo.url(:small) %><br>
  <h5><%= link_to "Edit profile", edit_user_registration_path %></h5>
</div>

<div class = "row-fluid">
<div class = "span3">
<p>			

        <%= @following %>    <%= link_to "following", user_following_path(current_user) %>
</p>
<p>
 <%= @followers %> <%= link_to "followers", user_followers_path(current_user) %>
</p>
</div>
<div class = "span9">
<%- model_class = Tweet -%>
<div class="page-header">
  <h3><%=t '.title', :default => model_class.model_name.human.pluralize %></h3>
</div>
<table class="table table-striped">
 
  <tbody>
    <% @tweets.each do |tweet| %>
      <tr>
        
        <td><p><h3><%=  tweet.tweetContent %></h3></p>
        <p><%= tweet.created_at %></p>
        <p>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_user_tweet_path(tweet.user_id, tweet.id), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      user_tweet_path(tweet.user_id, tweet.id),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </p>
        </td>
     </tr>
    <% end %>
  </tbody>
</table>
</div>


