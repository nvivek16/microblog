<%= form_for [@user, @tweet], :html => { :class => 'form-horizontal' } do |f| %>
  
<div class="field span8 offset3">
    
      <%= f.text_area :tweetContent, :class => 'text_area',:rows => 5, :class =>"field span8"%>
    </div>
<div class="field span3 offset9">
    <%= f.submit nil, :class => 'btn btn-primary' %>
  </div>
  
<% end %>
