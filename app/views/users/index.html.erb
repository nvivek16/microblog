<%- model_class = User -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<%= flash[:message] %>
<table class="table table-striped">
  <tbody>
    <% @users.each do |user| %>
      <tr><% if !@friendlist.include?user.id %>
        <td><%= link_to user.name, user_path(user) %></td>
        <td><%= user.email %></td>
        
          <td><%= link_to "follow", friendships_path(:friend_id => user), :method => :post %></td>
        <% end %>    
      </tr>
    <% end %>
  </tbody>
</table>


