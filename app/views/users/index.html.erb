<%- model_class = User -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<%= flash[:message] %>
<table class="table table-striped">
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.name, nil %></td>
        <td><%= user.email %></td>
        <% if @friendlist.include?user.id %>
        
        <td><%= link_to "unfollow", friendship_path(user), :method => :delete %></td>
        <% else %>
        <td><%= link_to "follow", friendships_path(:friend_id => user), :method => :post %></td>
        <% end %>    
      </tr>
    <% end %>
  </tbody>
</table>


